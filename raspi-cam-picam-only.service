[Unit]
Description=Raspi Camera Service
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/home/pi/kamen-street-pi/camera

ExecStartPre=/bin/sleep 10
ExecStart=/home/pi/kamen-street-pi/camera/my-env/bin/python pi_camera_streamer.py
Restart=always
RestartSec=10
#StartLimitInterval=0

[Install]
WantedBy=multi-user.target
